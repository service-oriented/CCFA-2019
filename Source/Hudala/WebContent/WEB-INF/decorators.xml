<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/api*</pattern>
    </excludes>
    
    <!-- apply Sitemesh default template-->
    
    <decorator name="web" page="web.jsp">
        <pattern>/*</pattern>
    </decorator>
      <decorator name="admin" page="home.jsp">
        <pattern>/admin/home</pattern>
    </decorator>
    <decorator name="login" page="login.jsp">
        <pattern>/dang-nhap*</pattern>
    </decorator>
    <decorator name="signup" page="signup.jsp">
        <pattern>/dangky*</pattern>
    </decorator>
    <decorator name="userProfile" page="userProfile.jsp">
        <pattern>/taikhoanuser*</pattern>
    </decorator>
     <decorator name="feedback" page="feedback.jsp">
        <pattern>/phanhoi*</pattern>
    </decorator>
</decorators>